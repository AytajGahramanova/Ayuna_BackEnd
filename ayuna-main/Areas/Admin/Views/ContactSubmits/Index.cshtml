
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<ContactSubmit>

    <style>
        .row{
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 25px;
        }
    .card-contactSubmit{
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .card-contactSubmit:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }
    h2{
         font-size: 22px;
            margin-bottom: 5px;
            color: #000;
    }
    h4{
        color: #666;
        font-size: 18px;
        margin-bottom: 15px;
        font-weight: normal;
    }
    p{
        flex-grow: 1;
        margin-bottom: 20px;
        line-height: 1.5;
        color: #444;
    }

    .delete-btn {
        background-color: #e53935;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 5px;
        transition: background-color 0.3s;
    }

        .delete-btn:hover {
            background-color: #c62828;
        }

    @@media(max-width:768px){
        .row{
            grid-template-columns: repeat(1, 1fr);
            gap:18px;
            width: 100%;
        }
        .delete-btn{
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    }
</style>

<div class="row mt-4">
    @foreach (var item in Model)
    {
        <div class="card-contactSubmit">
            <h2>@item.Name</h2>
            <h4>@item.Email</h4>
            <p>@item.Message</p>
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@item.Id" />
                <button class="delete-btn" type="submit">Delete</button>
            </form>
        </div>
    }
   
</div>

