
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Product

<form asp-action="Update" method="post" class="mt-4">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input style="border: 1px solid gray; max-width: 700px; padding: 10px;" asp-for="Name" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Image</label>
        <input style="border: 1px solid gray; max-width: 700px; padding: 10px;" asp-for="Image" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">HoverImage</label>
        <input style="border: 1px solid gray; max-width: 700px; padding: 10px;" asp-for="hoverImage" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input style="border: 1px solid gray; max-width: 700px; padding: 10px;" asp-for="Price" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <a class="btn btn-info" asp-action="Index">Go back</a>
</form>

