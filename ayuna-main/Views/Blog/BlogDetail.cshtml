@{
	ViewData["Title"] = "BlogDetail";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BlogDetailVM

<!-- blog start -->
<div class="blog-wrapper">
	<div class="title text-center">
		<h3>Blog</h3>
		<div class="container-desc">
			<div class="row flex-column flex-lg-row">
				<center>
					<div class="col-10 blog-left">
						<div class="blog-card mb-4 col-12">
							<div class="image">
								<img class="w-100"
									 src="@Model.blog.Image"
									 alt="img" />
							</div>
							<div class="content align-items-start justify-content-start">
								<div class="blog-date d-flex align-items-center">
									<span>@Model.blog.dateTime </span>
									<span class="blog-categories"></span>
								</div>
								<div class="d-flex flex-column align-items-start justify-content-start text-start">
									<h2>Italian Getaway</h2>
									<p>
										@Model.blog.Description
									</p>
								</div>
							</div>
						</div>
						<div class="blog-related d-flex align-items-center gap-3 gap-lg-4 flex-column flex-lg-row">
							@foreach (var item in Model.blogs.Skip(2).Take(3))
							{
								<div class="related-cards w-100">
									<a asp-route-id="@item.Id" asp-action="BlogDetail">
										<img class="w-100 object-fit-cover"
											 src="@item.Image"
											 alt="img" />
									</a>
								</div>
							}

						</div>
					</div>
				</center>
				
			</div>
		</div>
	</div>
</div>

<!--blog end -->
