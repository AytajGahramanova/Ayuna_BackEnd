@{
	ViewData["Title"] = "Ayuna - Contact";
}

@model ContactVM

<!-- breadcrumb start -->
<section class="breadcrumb-section">
	<div class="breadcrumb">
		<a href="index.html">Home / </a>
		<a href="#">Contact</a>
	</div>
	<div class="layer"></div>
</section>
<!-- breadcrumb end -->
<!-- contact start -->
<div class="contact-wrapper">
	<div class="container-desc">
		<div class="row d-flex flex-column flex-lg-row align-items-start justify-content-between w-100 my-5 gap-4 gap-lg-0">
			@if (ViewBag.ContactCount > 0)
			{
				<div class="col-12 col-lg-6 contact-us">
					<h1>Get In Touch</h1>
					<p>
						@Model.contact.Description
					</p>
					<div class="d-flex flex-column gap-2">
						<div class="item d-flex align-items-center align-items-lg-center gap-3">
							<div class="d-flex align-items-center gap-2">
								<i class="fa-solid fa-phone"></i>
								<h2>Phone:</h2>
							</div>
							<div>
								<a href="tel:+@Model.contact.Phone">@Model.contact.Phone</a>
							</div>
						</div>
						<div class="item d-flex align-items-center align-items-lg-center gap-3">
							<div class="d-flex align-items-center gap-2">
								<i class="fa-solid fa-location-dot"></i>
								<h2>Address:</h2>
							</div>
							<div>
								<span>@Model.contact.Address</span>
							</div>
						</div>
						<div class="item d-flex align-items-center align-items-lg-center gap-3">
							<div class="d-flex align-items-center gap-2">
								<i class="fa-solid fa-envelope"></i>
								<h2>Email:</h2>
							</div>
							<div>
								<a class="footer-email" href="mailto:@Model.contact.Email">@Model.contact.Email</a>
							</div>
						</div>
					</div>
				</div>
			}

			<div class="col-12 col-lg-6 form-container">
				<h4>To contact us, write here.</h4>
				<form asp-action="SendMessage" asp-controller="Contact" method="post">
					<input asp-for="@Model.contactSubmit.Name" type="text" placeholder="Name" />
					<span asp-validation-for="contactSubmit.Name" class="text-danger"></span>
					<input asp-for="@Model.contactSubmit.Email" type="email" placeholder="Email" />
					<span asp-validation-for="contactSubmit.Email" class="text-danger"></span>
					<textarea asp-for="@Model.contactSubmit.Message" placeholder="Message"></textarea>
					<button type="submit">Submit</button>
				</form>
			</div>
		</div>
	</div>
	<div class="map-area">
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d96969.96034686705!2d49.548679199352556!3d40.57888441015531!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x403096dcd0923f6b%3A0xdf4767c369322a71!2sSumqayit!5e0!3m2!1sen!2saz!4v1758354728659!5m2!1sen!2saz"
				width="600"
				height="450"
				style="border: 0"
				allowfullscreen=""
				loading="lazy"
				referrerpolicy="no-referrer-when-downgrade"></iframe>
	</div>
</div>
<!-- contact end -->

	@section Scripts{
	<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

	}