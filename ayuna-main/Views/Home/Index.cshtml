@using ayuna_main.ViewModel
@{
	ViewData["Title"] = "Ayuna - Home";
}

@model HomeVM

<!-- slider section start -->
<section class="slider-section">
	<div id="carouselExampleFade"
		 class="carousel slide carousel-fade"
		 data-bs-ride="carousel"
		 data-bs-interval="4000">
		<div class="carousel-inner">
			@{
				int i = 0;
			}

			@foreach (Slider item in Model.sliders)
			{
				<div class="carousel-item @(i == 0 ? "active" : "") position-relative">
					<img src="@item.Image"
						 class="d-block w-100"
						 alt="img" />
					<div class="slider-content position-absolute d-flex flex-column align-items-center justify-content-center gap-2">
						<h2>@item.Title</h2>
						<a asp-controller="Shop">Shop</a>
					</div>
				</div>
			}

		</div>
		<button class="carousel-control-prev"
				type="button"
				data-bs-target="#carouselExampleFade"
				data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next"
				type="button"
				data-bs-target="#carouselExampleFade"
				data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</section>
<!-- slider section end -->
<!-- about section start -->
@if (ViewBag.AboutCount > 0)
{
	<section class="about-section">
		<div class="title text-center">
			<h3>About</h3>
		</div>
		<div class="container-desc d-flex align-items-center justify-content-between">
			<div class="about-content w-100">
				<h2>@Model.about?.Title</h2>
				<p>
					@Model.about?.Description
				</p>
				<a asp-controller="About">
					<span>Read more</span>
				</a>
			</div>
			<div class="w-100">
				<img class="w-100"
					 src="@Model.about?.Image"
					 alt="img" />
			</div>
		</div>
	</section>
}

<!-- about section end -->
<!-- product section start -->
<section class="product-section">
	<div class="title text-center">
		<h3>Products</h3>
	</div>
	<div class="container-desc d-flex flex-wrap flex-column">
		<div class="more-products d-flex justify-content-center justify-content-lg-end">
			<a asp-controller="Shop">
				<span>More products</span>
			</a>
		</div>
		<div class="row d-flex justify-content-center justify-content-lg-between">
			@foreach (var item in Model.products)
			{
				<div class="product col-12 col-lg-3">
					<div class="product-image">
						<img src="@item.Image" alt="img" />
					</div>
					<div class="content">
						<div class="d-flex justify-content-between align-items-center position-relative">
							<a asp-route-id="@item.Id" asp-action="ProductDetail">@item.Name</a>
							<form asp-controller="Wishlist" asp-action="Add" method="post">
								<input type="hidden" name="productId" value="@item.Id" />
								<button style="border: none; background-color: transparent;" type="submit"><i style="color: @(item.isLike == false ? "" : "#FF0000")" class="@(item.isLike == false ? "fa-regular fa-heart" : "fas fa-heart")"></i></button>
							</form>
						</div>
						<div class="categorie">
							@foreach (var pro in item.Categories)
							{
								if (pro != item.Categories.Last())
								{
									<span>@pro.Name /</span>
								}
								else
								{
									<span>@pro.Name</span>
								}
							}
						</div>
						<div class="price">
							<p>@item.Price $</p>
						</div>
					</div>
					<div class="hover-image">
						<img src="@item.hoverImage" alt="img" />
					</div>
					<div class="more-detail">
						<a asp-route-id="@item.Id" asp-action="ProductDetail">Select options</a>
					</div>
				</div>
			}
		</div>
	</div>
</section>
<!-- product section end -->
<!-- portfolio section start -->
<section class="portfolio-section">
	<div class="title text-center">
		<h3>Portfolio</h3>
	</div>
	<div class="container-desc d-flex align-items-center justify-content-between flex-wrap">
		@foreach (Portfolio item in Model.portfolios)
		{
			<a asp-controller="Portfolio">
				<div class="portfolio-img">
					<img src="@item.Image" alt="img" />
					<div class="layout-portfolio"></div>
				</div>
			</a>
		}

	</div>
</section>
<!-- portfolio section end -->
<!-- gift-card section start -->
@if (ViewBag.GiftCardCount > 0)
{
	<section class="gift-card-section">
		<div class="container-desc">
			<div style="background-image: url('@Url.Content(Model.giftCard?.Image)');" class="gift-bg d-flex flex-column flex-lg-row justify-content-center align-items-center text-center">
				<h2>@Model.giftCard?.Title</h2>
				<div class="content">
					<p>
						@Model.giftCard?.Description
					</p>
					<a asp-controller="GiftCart" asp-action="Index">
						<span> more</span>
					</a>
				</div>
			</div>
		</div>
	</section>
}

<!-- gift-card section end -->
<!-- blog section start -->
<section class="blog-section">
	<div class="title text-center">
		<h3>Blog</h3>
	</div>
	<div class="container-desc d-flex flex-wrap align-items-center justify-content-center gap-4">
		@foreach (Blog item in Model.blogs)
		{
			<div class="item position-relative">
				<img class="w-100" src="@item.Image" alt="img" />
				<div class="text position-absolute d-flex flex-column align-items-center">
					<h2>@item.Name</h2>
					<a asp-controller="Blog">More</a>
				</div>
			</div>
		}
	</div>
</section>
<!-- blog section end -->