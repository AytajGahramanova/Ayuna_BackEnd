@{
	ViewData["Title"] = "Ayuna - Portfolio";
}

@model List<Portfolio>

<!-- breadcrumb start -->
<section class="breadcrumb-section">
	<div class="breadcrumb">
		<a href="index.html">Home / </a>
		<a href="#">Portfolio</a>
	</div>
	<div class="layer"></div>
</section>
<!-- breadcrumb end -->
<!-- portfolio section start -->
<section class="portfolio-section portfolio-page">
	<div class="title text-center">
		<h3>Portfolio</h3>
	</div>
	<div class="container-desc d-flex align-items-center justify-content-between flex-wrap" id="portfolioWrapper">
			@foreach (Portfolio item in Model)
			{
				<div class="portfolio-img">
					<img src="@item.Image" alt="img" />
					<div class="hover">
						<a data-src="@item.Image"
						   data-fancybox="gallery-photo">
							<i class="fa-solid fa-magnifying-glass"></i>
						</a>
					</div>
				</div>
			}
	</div>
	<div class="d-flex justify-content-center mt-4">
		<a id="loadMore">
			<span>Load more</span>
		</a>
	</div>
	
	<input type="hidden" id="portfolioId" value="@ViewBag.portfolioCount" />
</section>
<!-- portfolio section end -->

@section Scripts{
	<script src="./lib/jquery/dist/jquery.js"></script>
	<script src="~/backScript.js"></script>
}
