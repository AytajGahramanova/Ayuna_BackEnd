@{
	ViewData["Title"] = "Ayuna - Wishlist";
}

@model List<Wishlist>

<!-- breadcrumb start -->
<section class="breadcrumb-section">
	<div class="breadcrumb">
		<a asp-controller="Home" asp-action="Index" >Home / </a>
		<a href="#">Wishlist</a>
	</div>
	<div class="layer"></div>
</section>
<!-- breadcrumb end -->
<!-- wishlist start -->
<div class="cart-wishlist-wrapper mt-5 mb-5">
	<div class="container">
		<div class="table-responsive">
			<table class="table text-center">
				<thead>
					<tr>
						<th>Məhsul</th>
						<th>Məhsulun adı</th>
						<th>Qiymət</th>
						<th>Səbətə at</th>
						<th>Sil</th>
					</tr>
				</thead>
				<tbody>
					@if (Model != null)
					{
						@foreach (Wishlist item in Model)
						{
							<tr>
								<td><img src="@item.Product.Image" alt="img" /></td>
								<td>@item.Product.Name</td>
								<td>@item.Product.Price ₼</td>
								<td><a asp-route-productId="@item.ProductId" asp-action="Add" asp-controller="Basket"><i class="fa-solid fa-cart-shopping"></i></a></td>
								<td><a asp-action="Delete" asp-route-id="@item.ProductId"><i class="fa-solid fa-trash-can delete-icon"></i></a></td>
							</tr>
						}

					}
					else
					{
						<h2>Beyendiyiniz mehsul yoxdur</h2>
					}

				</tbody>
			</table>
		</div>
	</div>
</div>
<!-- wishlist end -->
